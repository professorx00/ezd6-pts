<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64" class="charimage" />
        <div class="header-details">
            <h1 class="charname">
                <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'MP.Actor.CharName'}}" />
            </h1>
            <div class="header-stats">
                <div></div>
                <div></div>
            </div>
        </div>

    </header>

    <section class="sheet-body">
         <div class="body-outer-grid">
            <div>
                <!-- monster features -->
                <ol class="item-list">
                    <li class="item flexrow item-header">
                        <div class="item-points header-text">{{localize 'EZD6.MonsterFeatures'}}</div>
                        <div class="item-controls action-col">
                            <a class="item-control item-create" title="{{localize 'EZD6.CreateItem'}}" data-type="monsterfeature">
                                <i class="fas fa-plus"></i>
                                {{localize 'EZD6.AddButton'}}
                            </a>
                        </div>
                    </li>
                    {{#each monsterfeatures as |item id|}}
                        <li class="item flexrow" data-item-id="{{item._id}}">
                            <h4 class="item-name">
                                <a class="item-control item-chat" data-type="monsterfeature" title="{{localize 'EZD6.ShowDesc'}}">
                                    {{item.name}}
                                </a>
                            </h4>
                            <div class="item-controls action-col">
                                <a class="item-control item-edit" title="{{localize 'EZD6.EditItem'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="item-control item-delete" title="{{localize 'EZD6.DeleteItem'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </li>
                    {{/each}}
                </ol>

                    <div class="item-list">
                        <!-- Description -->
                        <div class="item flexrow spacer">
                            <div class="header-text">{{localize 'EZD6.Description'}}</div>
                            <div class="item-controls action-col">
                                <a class="item-control desc-chat" title="{{localize 'EZD6.ShowDesc'}}">
                                    <i class="fas fa-info-circle"></i></a>
                            </div>
                        </div>
                            <div class="desc">
                                {{editor enrichedDescription target="system.description" button=true editable=editable engine="prosemirror" collaborate=false}}
                            </div>
                    </div>

            </div>

            <div>
                <div class="right-col">
                    <div>
                        <span class="headertext">{{localize 'EZD6.ToHit'}}</span>
                    </div>
                    <div>
                        <input name="system.tohit" type="number" value="{{system.tohit}}" />
                    </div>
                </div>

                <div class="right-col">
                    <div>
                        <span class="headertext">{{localize 'EZD6.Health'}}</span>
                    </div>
                    <div>
                    <a class="item-control strikes-minus"><i class="fas fa-minus"></i></a>
                    <input name="system.strikes.value" type="number" value="{{system.strikes.value}}" />
                    <a class="item-control strikes-plus"><i class="fas fa-plus"></i></a>
                    /
                    <input name="system.strikes.max" type="number" value="{{system.strikes.max}}" />
                    </div>
                    <div>
                        <span class="subtext">{{localize 'EZD6.StrikesUntilDead'}}</span>
                    </div>
                    <div>
                        <span class="headertext">Mental</span>
                    </div>
                    <div>
                    <a class="item-control mental-minus"><i class="fas fa-minus"></i></a>
                    <input name="system.mental.value" type="number" value="{{system.mental.value}}" />
                    <a class="item-control mental-plus"><i class="fas fa-plus"></i></a>
                    /
                    <input name="system.mental.max" type="number" value="{{system.mental.max}}" />
                    </div>
                    <div>
                        <span class="subtext"></span>
                    </div>
                </div>


                <div class="right-col">
                    <div>
                        <span class="headertext">{{localize 'EZD6.Attack'}}</span>
                        <a class="item-control doroll" data-rolltype="attack" title="{{localize 'EZD6.RollAttack'}}">
                            <i class="fas fa-dice-six"></i>
                        </a> 
                    </div>
                </div>
                <div class="right-col">
                    <div>
                        <span class="headertext">{{localize 'EZD6.TaskCheck'}}</span>
                        <a class="item-control doroll" data-rolltype="task" title="{{localize 'EZD6.RollTaskCheck'}}">
                            <i class="fas fa-dice-six"></i>
                        </a> 
                    </div>
                </div>
                <div class="right-col">
                    <div><span class="headertext">{{localize 'EZD6.Magic'}}</span></div>
                    <div>
                        {{localize 'EZD6.SpellAbility'}}
                        <input name="system.magicdice" type="number" value="{{system.magicdice}}" />d6
                        <a class="item-control roll-monster-magic" data-rolltype="monster-magic" title="{{localize 'EZD6.RollMonsterMagic'}}">
                            <i class="fas fa-dice-six"></i>
                        </a> 
                    </div>
                    <div>
                        {{localize 'EZD6.Resist'}}
                        <input name="system.magicresist" type="number" value="{{system.magicresist}}" />d6
                        <a class="item-control roll-resist" data-rolltype="magicresist" title="{{localize 'EZD6.RollMagicResistance'}}">
                            <i class="fas fa-dice-six"></i>
                        </a> 
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
